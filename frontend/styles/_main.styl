spacing = 20px
color-light = #F8F8F8
color-dark = #0B1015

*
    box-sizing: border-box

body
    font-family: 'Open Sans'
    background: color-light
    color: color-dark
    margin: 0
    font-size: 14px

h1, h2, h3, h4, h5, h6
    margin-top: 0

a
    color: inherit
    text-decoration: none
    transition: color 100ms ease-in-out

    &:hover
        text-decoration: underline
        color: lighten(color-dark, 50%)

header
    position: fixed
    top: 0
    bottom: 0
    left: 0
    width: 350px
    background: color-dark
    color: color-light
    text-align: center

    *
        position: relative
        z-index: 1

.preview__img
    width: 100%
    height: auto

main
    margin-left: 350px
    padding: spacing

.tags
    margin: 0
    padding: 0
    -moz-column-gap: spacing
    -moz-column-fill: auto
    -webkit-column-count: 3
    -webkit-column-gap: spacing
    -webkit-column-fill: auto
    column-count: 3
    column-gap: spacing
    column-fill: auto

.tags__box
    background-color: white
    border-radius: (spacing / 4)
    padding: spacing
    margin: 0 0 spacing 0
    -moz-column-break-inside: avoid
    -webkit-column-break-inside: avoid
    column-break-inside: avoid

.tags__title
    font-weight: 600
    margin-bottom: (spacing / 2)
    padding-bottom: (spacing / 4)
    text-transform: capitalize
    border-bottom: 1px solid color-light

.gifs
    list-style: none
    margin: 0
    padding: 0

.gifs__gif
    line-height: 1.5

.uploader
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    padding: spacing
    color: white
    background: rgba(0,0,0,.75)
    transition: 150ms ease-in-out

    // Disable it normally
    opacity: 0
    pointer-events: none

    .uploader-active &
        cursor: copy
        opacity: 1

.uploader__inner
    width: 100%
    height: 100%
    border: 8px dashed rgb(250, 250, 250)
    border-radius: 10px
    display: flex
    align-items: center
    justify-content: center

    h2
        font-size: 40px
        font-weight: 600


// We have display: none on a style tag to prevent the uploader
// from flashing before angular and styles are loaded in
body
.uploader
    display: block !important